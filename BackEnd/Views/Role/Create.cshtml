@{
    ViewBag.Title = "Roles";
    Layout = "_Layout";
}

<h2>Create new role</h2>

<form method="post" asp-action="Create" asp-controller="Role">
    <div class="form-group">
        <label>Role name</label>
        <input name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" />
    </div>
</form>